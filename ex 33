a = int(input('Digite um valor: '))
b = int(input('Digite um valor: '))
c = int(input('Digite um valor: '))

menor = a

if b<a and b<c:
    menor = b
if c<a and c<b:
    menor = c

#verificando quem Ã© o maior
maior = a
if b>a and b>c:
    maior = b
if c>a and c>b:
    maior = c
print('O menor valor digitado foi {}' .format(menor))
print('O maior valor digitado foi {}' .format(maior))
